<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Elemegi.Elemegi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Controller.MyApp">

        <activity
            android:name=".Controller.ViewManager"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.LoginPanel"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.RegisterPanel"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.HomePagePanel"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.CommentsPanel"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.ProfilePagePanel"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.ForgotPasswordPanel"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.ProductPagePanel"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.ChangePasswordPanel"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>