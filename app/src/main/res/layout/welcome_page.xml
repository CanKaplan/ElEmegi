<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#B30B0B"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/inside_imageview"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginStart="120dip"
        android:layout_marginTop="120dip"
        android:alpha=".80"
        android:contentDescription="@null"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dip"
        android:layout_marginTop="260dip"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="El Emegi"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#C4BEB7"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dip"
        android:layout_marginTop="360dip"
        android:backgroundTint="#FF5722"
        android:backgroundTintMode="src_in"
        android:bufferType="normal"
        android:shape="rectangle"
        android:text="LOGIN"
        android:textColor="#F5F5F3" />


</RelativeLayout>
