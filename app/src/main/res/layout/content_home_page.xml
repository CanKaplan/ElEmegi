<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCBB1616"
    tools:showIn="@layout/app_bar_main">


    <ViewFlipper
        android:id="@+id/v_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:maxHeight="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    </ViewFlipper>
    <TextView
        android:id="@+id/product_name_flipper"
        android:text="Aaaaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:textAlignment="center"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/SliderDots"
        android:layout_below="@+id/v_flipper"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/popular"
        android:text="Popular Products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ViewFlipper
        android:id="@+id/v_flipper_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:maxHeight="175dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <GridLayout
            android:id="@+id/imageContainer"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/image1"
                android:layout_columnWeight="10"
                android:layout_height="100dp"
                android:layout_width="100dp"/>

            <ImageView
                android:id="@+id/image2"
                android:layout_columnWeight="10"
                android:layout_height="100dp"
                android:layout_width="100dp"/>

            <ImageView
                android:id="@+id/image3"
                android:layout_columnWeight="10"
                android:layout_height="100dp"
                android:layout_width="100dp"/>

            <TextView
                android:id="@+id/text1"
                android:layout_marginTop="-8dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_marginTop="-8dp"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/text3"
                android:layout_marginTop="-8dp"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                />

            <ImageView
                android:id="@+id/image4"
                android:layout_marginTop="-8dp"
                android:layout_columnWeight="1"
                android:layout_height="100dp"
                android:layout_width="100dp"/>

            <ImageView
                android:id="@+id/image5"
                android:layout_marginTop="-8dp"
                android:layout_columnWeight="1"
                android:layout_height="100dp"
                android:layout_width="100dp"/>

            <ImageView
                android:id="@+id/image6"
                android:layout_marginTop="-8dp"
                android:layout_columnWeight="1"
                android:layout_height="100dp"
                android:layout_width="100dp"/>

            <TextView
                android:id="@+id/text4"
                android:layout_marginTop="-16dp"
                android:layout_gravity="center_horizontal"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="AAAAAAAAAA"
                />
            <TextView
                android:id="@+id/text5"
                android:layout_marginTop="-16dp"
                android:layout_gravity="center_horizontal"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="BBBBBBBB"
                />
            <TextView
                android:id="@+id/text6"
                android:layout_marginTop="-16dp"
                android:layout_gravity="center_horizontal"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="CCCCCCCCCCC"
                />
        </GridLayout>

    </ViewFlipper>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F7D6B9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation_menu_bottom" />


</androidx.constraintlayout.widget.ConstraintLayout>